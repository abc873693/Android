<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin_short">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_page"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView_title"
                android:paddingLeft="@dimen/activity_horizontal_margin_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:layout_gravity="center"
                android:textColor="#DD000000"
                android:textSize="20sp"
                tools:text="title" />

            <ImageButton
                android:id="@+id/button_share"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:src="@drawable/share" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin_short"
                android:paddingTop="@dimen/activity_vertical_margin_short"
                android:textSize="12sp"
                android:textColor="@color/grey_600"
                tools:text="date" />
        </LinearLayout>


        <TextView
            android:id="@+id/textView_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DD000000"
            android:textSize="16sp"
            tools:text="content" />

        <ImageView
            android:id="@+id/imageView_post"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:paddingBottom="@dimen/activity_vertical_margin_short"
            android:paddingTop="@dimen/activity_vertical_margin_short"
            android:scaleType="fitCenter"
            tools:src="@mipmap/ic_launcher"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                tools:text="likes" />

            <TextView
                android:id="@+id/textView_shares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                tools:text="shares" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>